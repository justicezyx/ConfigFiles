	co = checkout
	br = branch
	tl = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Crest' --abbrev-commit --date=relative
	ci = commit
  cia = commit -a
  root = rev-parse --show-toplevel
